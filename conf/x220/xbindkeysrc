## x220 bindings

# touchpad toggle
"~/.dotfiles/scripts/x220/toggle-touchpad"
    XF86TouchpadToggle

# PrintScreen
"~/.dotfiles/scripts/print-screen" 
    Print 
"~/.dotfiles/scripts/print-screen-area" 
    Shift+Print 

# Screen toggle
"~/.dotfiles/scripts/screen-select" 
    XF86Display

# brightness controls
"light -A 10"
    XF86MonBrightnessUp 
"light -U 10"
    XF86MonBrightnessDown 
"light -A 1"
    Shift+XF86MonBrightnessUp 
"light -U 1"
    Shift+XF86MonBrightnessDown 

# volume controls
"amixer set Master 5%+" 
    XF86AudioRaiseVolume 
"amixer set Master 5%-" 
    XF86AudioLowerVolume 
"amixer set Master toggle" 
    XF86AudioMute 
"amixer set Capture toggle" 
    XF86AudioMicMute 

#"mate-screenshot -a"
    #Shift+Print 
#"mate-screenshot"
    #Print

# Extra key to shift
#"xdotool key shift"
    #less
