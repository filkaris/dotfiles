# Brightness controls
"light -A 10"
    XF86MonBrightnessUp 
"light -U 10"
    XF86MonBrightnessDown 
"light -A 1"
    Shift+XF86MonBrightnessUp 
"light -U 1"
    Shift+XF86MonBrightnessDown 

# Volume controls
"amixer set Master 5%+" 
    XF86AudioRaiseVolume 
"amixer set Master 5%-" 
    XF86AudioLowerVolume 
"amixer set Master toggle" 
    XF86AudioMute 
"amixer set Capture toggle" 
    XF86AudioMicMute 

# Webcam
"~/.dotfiles/bin/webcam" 
    XF86WebCam

# Screen Select
"~/.dotfiles/bin/screen-select" 
    XF86Display

# PrintScreen
"~/.dotfiles/bin/print-screen" 
    Print 
"~/.dotfiles/bin/print-screen-area" 
    Shift+Print 

# touchpad toggle
"~/.dotfiles/bin/x220/toggle-touchpad"
    XF86TouchpadToggle

